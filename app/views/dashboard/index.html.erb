<div class="columns">
  <div class="column">
    <h1 class="title"><%= icon("tachometer") %> Dashboard</h1>
    <div style="margin-bottom: 1.5rem">
      <%= link_to icon("plus-circle", "Start New Log"), logs_path, method: :post, class: "button is-link" %>
      <%= link_to icon("file-export", "Export Last Pay Period"), exports_path(format: :csv), method: :post, class: "button is-link" %>
    </div>
  </div>

  <div class="column">
    <canvas id="chart" style="width: 100%; height: 120px;" data-values="<%= hours_by_weeks(5).to_json %>"></canvas>

    <script type="text/javascript">
      var ctx = document.getElementById("chart");
      var data = JSON.parse(ctx.getAttribute("data-values"));
      var values = [];
      var labels = [];

      Object.keys(data).forEach(function(key) {
        var attrs = data[key];
        values.push(attrs['hours'])
        labels.push(attrs['label'])
      })

      var myChart = new Chart(ctx, {
          type: 'bar',
          data: {
              labels: labels,
              datasets: [{
                  label: '# of Hours',
                  data: values,
                  backgroundColor: 'rgba(50, 155, 220, 0.56)',
                  borderColor: 'rgba(50,115,220,0.78)',
                  borderWidth: 1
              }]
          },
          options: {
              legend: {
                  display: true,
                  position: 'bottom'
              },
              scales: {
                  yAxes: [{
                      ticks: {
                          beginAtZero:true
                      }
                  }]
              }
          }
      });
    </script>
  </div>
</div>


<div class="box">
  <span class="title"><%= pluralize(number_with_precision(Log.current_pay_period_elapsed_seconds / 60.0 / 60, strip_insignificant_zeros: true, precision: 2), "Hour") %> This Pay Period</span>
  <small><%= Log.current_pay_period_dates.min.strftime("%b %e, %Y") %> - <%= Log.current_pay_period_dates.max.strftime("%b %e, %Y") %></small>
</div>

<table class="table" style="width: 100%;">
  <thead>
    <tr>
      <th style="text-align: center">Active</th>
      <th>Start</th>
      <th>End</th>
      <th>Hours</th>
      <th>Project</th>
      <th style="text-align: center;" colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td style="text-align: center;"><%= icon(log.active? ? 'check' : 'times', class: log.active? ? "has-text-success" : "has-text-danger") %></td>
        <td>
          <%= formatted_date(log.start_at) %>
          <%= formatted_time(log.start_at) %>
        </td>
        <td>
          <% if log.end_at? %>
            <%= formatted_date(log.end_at) %>
            <%= formatted_time(log.end_at) %>
          <% else %>
            <span>Not Set</span>
          <% end %>
        </td>
        <td style="text-align: center">
          <% if log.hours.present? %>
            <%= number_with_precision(log.hours, strip_insignificant_zeros: true, precision: 2) %>
          <% else %>
            <span>N/A</span>
          <% end %>
        </td>
        <td><%= log.project&.name || "Not Set" %></td>
        <td><%= link_to "Edit", edit_log_path(log) %></td>
        <td><%= link_to "Delete", log_path(log), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>