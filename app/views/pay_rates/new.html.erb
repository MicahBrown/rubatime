<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><%= link_to "Pay Rate", pay_rate_path %></li>
    <li class="is-active"><a href="#" aria-current="page">Change Pay Rate</a></li>
  </ul>
</nav>

<h1 class="title">Change Pay Rate</h1>

<%= form_tag pay_rate_path do %>
  <div class="field">
    <%= label_tag "pay_rate[rate]", "Rate" %>
    <div class="control">
      <%= number_field_tag "pay_rate[rate]", PayRate.current&.rate || 0, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= label_tag "pay_rate[effective_start_date]", "Start" %>
    <div class="control">
      <%= date_field_tag "pay_rate[effective_start_date]", input_date(Date.today), class: "input date-input", required: true, pattern: "[0-9]{2}/[0-9]{2}/[0-9]{4}" %>
    </div>
  </div>

  <div>
    <%= submit_tag nil, class: "button is-primary" %>
  </div>
<% end %>