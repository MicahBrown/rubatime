<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><%= link_to "Dashboard", dashboard_path %></li>
    <li class="is-active"><a href="#" aria-current="page"><%= params[:action].titleize %> Log</a></li>
  </ul>
</nav>

<h1 class="title">Edit Log</h1>

<%= form_for @log do |f| %>
  <div class="columns">
    <div class="column">
      <div class="field">
        <%= f.label :start_at %>
        <div class="control">
          <%= f.text_field :start_at, value: formatted_time(@log.start_at), class: "input" %>
        </div>
      </div>
    </div>

    <div class="column">
      <%= f.label :end_at %>
      <div class="field has-addons">
        <div class="control">
          <%= f.text_field :end_at, value: formatted_time(@log.end_at), class: "input" %>
        </div>

        <div class="control">
          <%= button_tag "Now", type: :button, class: "button", onclick: "document.getElementById('log_end_at').value = moment().format('MMM DD, YYYY h:mm A');" %>
        </div>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :project_id %>
    <div class="control">
      <div class="select">
        <%= f.collection_select :project_id, Project.all, :id, :name, {prompt: "Please select"} %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :description %>
    <div class="control">
      <%= f.text_area :description, class: "textarea" %>
    </div>
  </div>

  <div>
    <%= f.submit class: "button is-light" %>
    <%= f.submit "Finish Log", type: :submit, class: "button is-primary" %>
  </div>
<% end %>