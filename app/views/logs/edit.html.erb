<%= link_to "Dashboard", dashboard_path %> \
<h1>Edit Log</h1>

<%= form_for @log do |f| %>
  <div>
    <%= f.label :start_at %><br>
    <%= f.text_field :start_at %>
  </div>

  <div>
    <%= f.label :end_at %><br>
    <%= f.text_field :end_at %>
    <%= button_tag "Now", type: :button %>
  </div>

  <div>
    <%= f.label :project_id %><br>
    <%= f.collection_select :project_id, Project.all, :id, :name, prompt: "Please select" %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit %>
    <%= f.submit "Finish Log", type: :submit %>
  </div>
<% end %>