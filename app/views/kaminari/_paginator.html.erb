<%= paginator.render do -%>
  <nav class="pagination is-centered" role="navigation" aria-label="pagination">
    <%= prev_page_tag %>
    <%= next_page_tag unless current_page.out_of_range? %>
    <ul class="pagination-list">
      <% each_page do |page| -%>
        <% if page.display_tag? -%>
          <li><%= page_tag page %></li>
        <% elsif !page.was_truncated? -%>
          <li><%= gap_tag %></li>
        <% end -%>
      <% end -%>
    </ul>
<% end %>